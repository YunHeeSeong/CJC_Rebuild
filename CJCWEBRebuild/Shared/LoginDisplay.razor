@using Microsoft.AspNetCore.Components.Authorization
@using GMINWEB_CJC.Model

@inject NavigationManager Navigation
@inject TokenProvider TokenProvider

<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">@context.User.Identity.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link">로그아웃</button>
            @*<input name="__RequestVerificationToken" type="hidden"
                   value="@TokenProvider.AccessToken">*@
        </form>
    </Authorized>
    <NotAuthorized>
        <RadzenLink Path="Identity/Account/Register" Text="회원가입" class="nav-link text-dark" />
        <RadzenLink Path="Identity/Account/Login" Text="로그인" class="nav-link text-dark" />
    </NotAuthorized>
</AuthorizeView>